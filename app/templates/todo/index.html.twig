{% extends 'base.html.twig' %}

{% block title %}My Todos - PHP Todo App{% endblock %}

{% block body %}
<turbo-frame id="todo-page">
    <!-- Flash Messages (inside frame for Turbo updates) -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mb-4" role="alert">
                {% if label == 'success' %}
                    <i class="bi bi-check-circle-fill me-2"></i>
                {% elseif label == 'danger' %}
                    <i class="bi bi-exclamation-circle-fill me-2"></i>
                {% endif %}
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card">
                <div class="stat-number">{{ stats.total }}</div>
                <div class="text-muted">Total</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card">
                <div class="stat-number">{{ stats.pending }}</div>
                <div class="text-muted">Pending</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card success">
                <div class="stat-number">{{ stats.completed }}</div>
                <div class="text-muted">Completed</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card danger">
                <div class="stat-number">{{ stats.overdue }}</div>
                <div class="text-muted">Overdue</div>
            </div>
        </div>
    </div>

    <!-- Quick Add Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="{{ path('todo_quick_add') }}" method="post" data-turbo-frame="todo-page" id="quick-add-form">
                <div class="row g-3 align-items-end">
                    <div class="col-md-5">
                        <input type="text" name="todo[title]" class="form-control" placeholder="What needs to be done?" required autocomplete="off">
                    </div>
                    <div class="col-md-3">
                        <select name="todo[priority]" class="form-select">
                            <option value="1">Low</option>
                            <option value="2" selected>Medium</option>
                            <option value="3">High</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="todo[dueDate]" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-gradient-primary w-100">
                            <i class="bi bi-plus-lg me-1"></i>Add
                        </button>
                    </div>
                </div>
                <input type="hidden" name="todo[_token]" value="{{ csrf_token('todo') }}">
            </form>
        </div>
    </div>

    <!-- Todos List -->
    <div class="card no-hover">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-list-check me-2"></i>My Todos
            </h5>
        </div>
        <div class="card-body p-0">
            {% if todos is empty %}
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <h4>No todos yet</h4>
                    <p class="text-muted mb-0">Use the form above to create your first todo!</p>
                </div>
            {% else %}
                <div class="list-group list-group-flush">
                    {% for todo in todos %}
                        <div class="list-group-item todo-item priority-{{ todo.priorityLabel|lower }}{% if todo.completed %} completed{% endif %}{% if todo.overdue %} overdue{% endif %}">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="d-flex align-items-start flex-grow-1">
                                    <form action="{{ path('todo_toggle', {id: todo.id}) }}" method="post" class="me-3" data-turbo-frame="todo-page">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ todo.id) }}">
                                        <button type="submit" class="btn btn-link p-0" title="Toggle completion">
                                            {% if todo.completed %}
                                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                            {% else %}
                                                <i class="bi bi-circle text-muted fs-4"></i>
                                            {% endif %}
                                        </button>
                                    </form>
                                    <div class="flex-grow-1">
                                        <h6 class="todo-title mb-1">{{ todo.title }}</h6>
                                        {% if todo.description %}
                                            <p class="text-muted mb-2 small">{{ todo.description|slice(0, 150) }}{% if todo.description|length > 150 %}...{% endif %}</p>
                                        {% endif %}
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <span class="priority-badge priority-{{ todo.priorityLabel|lower }}">
                                                {{ todo.priorityLabel }}
                                            </span>
                                            {% if todo.dueDate %}
                                                <span class="due-date{% if todo.overdue %} overdue{% endif %}">
                                                    <i class="bi bi-calendar-event me-1"></i>
                                                    {{ todo.dueDate|date('M d, Y') }}
                                                    {% if todo.overdue %}
                                                        <span class="badge bg-danger ms-1">Overdue</span>
                                                    {% endif %}
                                                </span>
                                            {% endif %}
                                            <span class="text-muted small">
                                                <i class="bi bi-clock me-1"></i>
                                                {{ todo.createdAt|date('M d, Y H:i') }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="todo-actions d-flex gap-2">
                                    <a href="{{ path('todo_edit', {id: todo.id}) }}" class="btn btn-outline-primary btn-sm" title="Edit" data-turbo-frame="_top">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="{{ path('todo_delete', {id: todo.id}) }}" method="post" class="d-inline" data-turbo-frame="todo-page" data-turbo-confirm="Are you sure you want to delete this todo?">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</turbo-frame>

<script>
// Reset form after successful Turbo submit
document.addEventListener('turbo:submit-end', (event) => {
    if (event.target.id === 'quick-add-form' && event.detail.success) {
        event.target.reset();
        event.target.querySelector('input[name="todo[title]"]').focus();
    }
});

// Auto-dismiss alerts after 3 seconds
document.addEventListener('turbo:frame-render', () => {
    document.querySelectorAll('.alert').forEach(alert => {
        setTimeout(() => {
            const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
            bsAlert.close();
        }, 3000);
    });
});
</script>
{% endblock %}
