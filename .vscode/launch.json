{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/app": "${workspaceFolder}/app"
            },
            "log": true,
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 512,
                "max_depth": 5
            }
        },
        {
            "name": "Listen for Xdebug (Dev Container)",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/app": "${workspaceFolder}"
            },
            "log": true,
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 512,
                "max_depth": 5
            }
        },
        {
            "name": "Debug Current Script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        },
        {
            "name": "Debug Symfony Console",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/app/bin/console",
            "args": ["${input:consoleCommand}"],
            "cwd": "${workspaceFolder}/app",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ]
        }
    ],
    "inputs": [
        {
            "id": "consoleCommand",
            "type": "promptString",
            "description": "Symfony console command to run",
            "default": "debug:router"
        }
    ]
}
